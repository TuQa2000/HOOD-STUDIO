<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_uploaded7"
            android:layout_width="match_parent"
            android:background="@drawable/image_boundary"
            android:layout_height="320dp">

        </ImageView>

        <TextView
            android:id="@+id/image_view_cus_name7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:text="Customer Name: "
            android:textColor="@color/write"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/image_view_cus_phone7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:text="Customer Phone: "
            android:textColor="@color/write"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/image_view_name7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:text="Name: "
            android:textColor="@color/write"
            android:textSize="18sp">

        </TextView>
        <TextView
            android:id="@+id/image_view_price7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:text="Price: "
            android:textColor="@color/write"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:id="@+id/image_view_size7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Item Size: "
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/write"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:id="@+id/image_view_detail7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:text="Details: "
            android:textColor="@color/write"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/image_view_address7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:text="Address: "
            android:textColor="@color/write"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/image_view_status7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:text="Status: "
            android:textColor="@color/write"
            android:textSize="18sp">
        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>